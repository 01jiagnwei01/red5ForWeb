<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:lang="http://www.springframework.org/schema/lang" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
	http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-3.1.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<bean id="placeholderConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:/red5.properties" />
	</bean>

	<!-- -->
	<import resource="red5-core.xml" />
	
	<!-- -->
	<import resource="red5-common.xml" />
	
	<!-- -->
	<import resource="red5-default.xml" />
 
	 <!-- 个人项目 -->
	 
	 <bean id="web.scope" class="org.red5.server.scope.WebScope" init-method="register" destroy-method="destroy">
		<property name="server" ref="red5.server" />
		<property name="parent" ref="global.scope" />
		<property name="handler" ref="web.handler" />
		<property name="context" ref="global.context" />
		<property name="contextPath" value="/default" />
		<property name="virtualHosts" value="*, localhost,www.gugudaochang.com,localhost:8088,127.0.0.1:8088" />
	</bean>

	<bean id="web.handler" class="org.red5.demos.oflaDemo.Application" />
</beans>
